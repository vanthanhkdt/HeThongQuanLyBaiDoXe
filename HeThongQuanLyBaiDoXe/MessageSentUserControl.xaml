<UserControl x:Class="HeThongQuanLyBaiDoXe.MessageSentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeThongQuanLyBaiDoXe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Right">
    <Grid>
        <TextBlock Text="{Binding User}" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="10" FontWeight="DemiBold" Margin="10 0"/>
        <Border Background="Gray" CornerRadius="15 15 0 15" Margin="10 12">
            <TextBlock Margin="15" TextWrapping="Wrap" Text="{Binding ContentUsage}" Foreground="White"/>
        </Border>
        <TextBlock Text="{Binding Time}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 0"/>
    </Grid>
</UserControl>
